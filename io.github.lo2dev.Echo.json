{
    "id" : "io.github.lo2dev.Echo",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "47",
    "sdk" : "org.gnome.Sdk",
    "command" : "echo",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	"python3-icmplib.json",
    	{
            "name" : "blueprint-compiler",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "tag" : "v0.14.0"
                }
            ],
            "cleanup" : [
                "*"
            ]
        },
        {
            "name" : "echo",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/lo2dev/Echo.git",
                    "tag": "2.0",
                    "commit": "76b117cef5868a3987c91f2b3e79f3d86448807d"
                }
            ]
        }
    ]
}
